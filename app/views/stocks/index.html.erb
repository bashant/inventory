<div class="row">
  <table class="table table-striped table-bordered">
    <div class="action text-right">
      <a href="<%= new_stock_path %>" class="btn btn-primary"><span><i class="fa fa-plus-square"></i></span>New</a>

    </div>
    <tr>
      <th>Item-Id</th>
      <th>Quantity</th>
      <th>Unit-Price</th>
      <th>Est-Sell-Price</th>
      <th>Actions</th>
    </tr>
    <% @stocks.each do |stocks| %>
        <tr>
          <td><%= stocks.item_id %></td>
          <td><%= stocks.quantity %></td>
          <td><%= stocks.unit_price %></td>
          <td><%= stocks.est_sell_price %></td>
          <td><%= link_to "Edit",edit_stock_path(stocks) %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <%= link_to "Delete",stock_path(stocks),
                          method: :delete,
                          data: {confirm: "Are you sure"} %><i class="fa fa-trash" aria-hidden="true"></i></td>
        </tr>

    <% end %>
  </table>
</div>