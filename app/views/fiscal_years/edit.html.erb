<div class="container">
  <%= form_for @fiscal_years, :html => {:class => "new-horizontal"} do |f| %>
      <div class="alert-danger">
        <% if @fiscal_years.errors.any? %>
            <h2>
              <%= pluralize(@fiscal_years.errors.count,"error")  %>
              occured
            </h2>
            <ul>
              <%= @fiscal_years.errors.full_messages.each do |e| %>
                  <li> <%= e %>
                  </li>
              <% end %>
            </ul>
            </div>
        <% end %>
        <div class="well">
          <div class="form-group">
            <label class="control-label col-md-2" for="name"> Name </label>
            <div class="col-md-7">
              <%= f.text_field :name, :class => "new-control", :id => "name", :placeholder => "Name" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-2" for="start_date">Start-date</label>
            <div class="col-md-7">
              <%= f.text_field :start_date, :class => "new-control", :id => "datepicker", :placeholder => "YY/MM/DD" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-2" for="end_date">End-date</label>
            <div class="col-md-7">
              <%= f.text_field :end_date, :class => "new-control", :id => "date", :placeholder => "YY/MM/DD" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit(type: 'submit', class: "btn btn-success") %>
            </div>
          </div>
        </div>
        </div>
        <script src="datepicker.css"></script>
        <script src="bootstrap-datepicker.js"></script>

        <script>
          $('#datepicker').datepicker();
        </script>
        <script>
          $('#date').datepicker();
        </script>
  <% end %>


  </div>