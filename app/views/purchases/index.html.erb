<div class="row">
  <table class="table table-striped table-bordered">
    <div class="action text-right">
      <a href="<%= new_purchase_path %>" class="btn btn-primary"><span><i class="fa fa-plus-square"></i></span>New</a>
    </div>
    <tr>
      <th>Supplier Id</th>
      <th>Bill No</th>
      <th>FiscalYear-Id</th>
      <th>Purchase Date</th>
      <th>Total</th>
      <th>Discount</th>
      <th>Tax</th>
      <th>Actions</th>
    </tr>
    <% @purchases.each do |purchases| %>
        <tr>
          <td><%= purchases.supplier_id %></td>
          <td><%= purchases.bill_no %></td>
          <td><%= purchases.fiscal_year_id %></td>
          <td><%= purchases.purchase_date %></td>
          <td><%= purchases.total %></td>
          <td><%= purchases.discount %></td>
          <td><%= purchases.tax %></td>
          <td><%= link_to "", edit_purchase_path(purchases), :class => "fa fa-pencil", :title => "Edit" %>
            <%= link_to "",purchase_path(purchases), :class => "fa fa-trash", :title => "delete",
                        method: :delete,
                        data: {confirm: "Are you sure"} %></td>
        </tr>

    <% end %>
  </table>
</div>