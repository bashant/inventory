<div class="row">
  <table class="table table-striped table-bordered">
    <div class="action text-right">
      <a href="<%= new_customer_path %>" class="btn btn-primary"><span><i class="fa fa-plus-square"></i></span>New</a>

    </div>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone-no</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @customers.each do |customers| %>
        <tr>
          <td><%= customers.name %></td>
          <td><%= customers.address %></td>
          <td><%= customers.phone_no %></td>
          <td><%= customers.email %></td>
          <td><%= link_to "", edit_customer_path(customers), :class => "fa fa-pencil", :title => "Edit" %>
            <%= link_to "",customer_path(customers), :class => "fa fa-trash", :title => "Delete",
                        method: :delete,
                        data: {confirm: "Are you sure"} %></td>
        </tr>

    <% end %>
  </table>
</div>