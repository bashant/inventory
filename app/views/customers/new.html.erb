<%= form_for @customers, :html => {:class => "new-horizontal"} do |f| %>
    <div class="alert-danger">
      <% if @customers.errors.any? %>
          <h2>
            <%= pluralize(@customers.errors.count,"error")  %>
            occured
          </h2>
          <ul>
            <%= @customers.errors.full_messages.each do |e| %>
                <li> <%= e %>
                </li>
            <% end %>
          </ul>
          </div>
      <% end %>
      <div class="well">
        <div class="form-group">
          <label class="control-label col-md-2" for="name">Name </label>
          <div class="col-md-7">
            <%= f.text_field :name, :class => "new-control", :id => "name", :placeholder => "Name" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-2" for="address">Address</label>
          <div class="col-md-7">
            <%= f.text_field :address, :class => "new-control", :id => "address", :placeholder => "Address" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-2" for="phone_no">Phone-no</label>
          <div class="col-md-7">
            <%= f.text_field :phone_no, :class => "new-control", :id => "phone_no", :placeholder => "Phone-no" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-2" for="email">Email</label>
          <div class="col-md-7">
            <%= f.text_field :email, :class => "new-control", :id => "email", :placeholder => "email@.com" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit(type: 'submit', class: "btn btn-success") %>
          </div>
        </div>
      </div>
      </div>
<% end %>