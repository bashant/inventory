<div class="row">
  <table class="table table-striped table-bordered">
    <div class="action text-right">
      <a href="<%= new_item_path %>" class="btn btn-primary"><span><i class="fa fa-plus-square"></i></span>New</a>

    </div>
    <tr>
      <th>Name</th>
      <th>Unit-id</th>
      <th>Item-code</th>
      <th>Quantity</th>
      <th>Item-group-id</th>
      <th>Expiry-date</th>
      <th>Actions</th>
    </tr>
    <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.unit_id %></td>
          <td><%= item.item_code %></td>
          <td><%= item.quantity %></td>
          <td><%= item.item_group_id %></td>
          <td><%= item.expiry_date %></td>
          <td><%= link_to "", item_path(item), :class => "fa fa-eye", :title => "show detial" %>
            <%= link_to "", edit_item_path(item), :class => "fa fa-pencil", :title => "Edit" %>
            <%= link_to "", item_path(item), :class => "fa fa-trash", :title => "Delete",
                        method: :delete,
                        data: {confirm: "Are you sure"} %></td>
        </tr>

    <% end %>
  </table>
</div>