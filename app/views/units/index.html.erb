<div class="row">
  <table class="table table-striped table-bordered">
    <div class="action text-right">
      <a href="<%= new_unit_path %>" class="btn btn-primary"><span><i class="fa fa-plus-square"></i></span>New</a>
    </div>
    <tr>
      <th>Name</th>
      <th>Print-name</th>
      <th>Actions</th>
    </tr>
    <% @units.each do |unit| %>
        <tr>
          <td><%= unit.name %></td>
          <td><%= unit.print_name %></td>
          <td> <%= link_to "", edit_unit_path(unit), :class => "fa fa-pencil", :title => "Edit" %>
            <%= link_to "", unit_path(unit), :class => "fa fa-trash", :title => "delete",
                        method: :delete,
                        data: {confirm: "Are you sure"} %></td>
        </tr>

    <% end %>
  </table>
</div>