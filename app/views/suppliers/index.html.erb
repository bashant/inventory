<div class="row">
  <table class="table table-striped table-bordered">
    <div class="action text-right">
      <a href="<%= new_supplier_path %>" class="btn btn-primary"><span><i class="fa fa-plus-square"></i></span>New</a>

    </div>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone-no</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @suppliers.each do |suppliers| %>
        <tr>
          <td><%= suppliers.name %></td>
          <td><%= suppliers.address %></td>
          <td><%= suppliers.phone_no %></td>
          <td><%= suppliers.email %></td>
          <td><%= link_to "", edit_supplier_path(suppliers), :class => "fa fa-pencil", :title => "Edit" %>
            <%= link_to "",supplier_path(suppliers), :class => "fa fa-trash", :title => "delete",
                        method: :delete,
                        data: {confirm: "Are you sure"} %></td>
        </tr>

    <% end %>
  </table>
</div>